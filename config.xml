<?xml version="1.0" encoding="UTF-8" ?>
    <widget xmlns   = "http://www.w3.org/ns/widgets"
    xmlns:gap   = "http://phonegap.com/ns/1.0"
    id          = "com.Recruitment.JobSeeker"
    versionCode = "10" 
    version     = "1.0.0" >

	<!-- app icon-->
	<icon src="img/logo.png" />
<!-- plugins -->
<gap:plugin name="com.indigoway.cordova.whitelist.whitelistplugin" version="1.1.1" />
<gap:plugin name="org.apache.cordova.dialogs" version="0.2.10" />
<gap:plugin name="com.phonegap.plugins.pushplugin"  />
<gap:plugin name="com.indigoway.cordova.whitelist.whitelistplugin" version="1.1.1" />
<gap:plugin name="org.apache.cordova.device" version="0.2.12" />
<gap:plugin name="org.apache.cordova.file-transfer" source="npm"  />
<gap:plugin name="org.apache.cordova.file" version="1.3.1" />
<gap:plugin name="org.apache.cordova.camera" version="0.3.2" />
<gap:plugin name="org.apache.cordova.splashscreen" version="0.3.4" />



<platform name="android">
        <preference name="Fullscreen" value="true" />
	
    <splash src="img/splash_converted_120.png" density="land-ldpi"/>
    <splash src="img/splash_converted_160.png" density="land-mdpi"/>
	<splash src="img/splash_converted_240.png" density="land-hdpi"/>
    <splash src="img/splash_converted_320.png" density="land-xhdpi"/>

	<splash src="img/splash_converted_120.png" density="port-ldpi"/>
	<splash src="img/splash_converted_160.png" density="port-mdpi"/>
    <splash src="img/splash_converted_240.png" density="port-hdpi"/>
    <splash src="img/splash_converted_320.png" density="port-xhdpi"/>
<preference name="AutoHideSplashScreen" value="true" />
 <preference name="SplashScreenDelay" value="10000" />
 <preference name="SplashMaintainAspectRatio" value="true|false" />
</platform>
 
    <!-- versionCode is optional and Android only -->
    <name>JobSeeker</name>

    <description>
    Recruitment-JobSeeker
    </description>

    <author href="https://build.phonegap.com" email="support@phonegap.com">
  Priyanka Mhatre
    </author>

    <!--
      This allows your app to load assets from all *.phongap.com domains
    -->
   <access origin="*" />
</widget>
